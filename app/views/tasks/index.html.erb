<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Project</th>
    <th>Description</th>
    <th>Priority</th>
    <th>Status</th>
    <th>Deadline</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.project_id %></td>
    <td><%= task.description %></td>
    <td><%= task.priority %></td>
    <td><%= task.status %></td>
    <td><%= task.deadline %></td>
    <td><%= task.comment %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

