<h1><%= @project.name %></h1>

<p><%= @project.description %></p>

<h2>Project members</h2>
<table>
	<th>Username</th>
	<th>Role</th>
	<th>E-mail</th>
	<th>Title</th>
<% @members.each do |member| %>
<tr>
	<td><%= member.user.username %></td>
	<td><%= member.member_role.role %></td>
	<td><%= member.user.email %></td>
	<td><%= member.title %></td>
</tr>
<% end %>
</table>

<h2>Tasks</h2>
<table>
	<th>Task</th>
	<th>Description</th>
	<th>Priority</th>
	<th>Status</th>
	<th>Deadline</th>
<% @tasks.each do |task| %>
<tr>
	<td><%= task.name %></td>
	<td><%= task.description %></td>
	<td><%= task.priority %></td>
	<td><%= task.status %></td>
	<td><%= task.deadline %></td>
</tr>
<% end %>
</table>
<%= link_to 'New Task', new_project_task_path(@project) %><br />

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>